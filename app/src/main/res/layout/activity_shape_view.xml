<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShapeViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <com.master.lib.view.ShapeTextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="ShapeTextView"
            android:textColor="@color/white"
            app:mc_dashGap="10dp"
            app:mc_dashWidth="10dp"
            app:mc_effectDrawable="@mipmap/img"
            app:mc_gradientCenterColor="@color/design_default_color_secondary"
            app:mc_gradientEndColor="#ff0"
            app:mc_gradientStartColor="#00f"
            app:mc_radius="20dp"
            app:mc_strokeColor="@color/black"
            app:mc_strokeWidth="4dp"
            app:mc_useRipple="false" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/img" />

        <com.master.lib.view.ShapeImageView
            android:id="@+id/shapeImageView"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@mipmap/img"
            app:mc_dashGap="0dp"
            app:mc_dashWidth="10dp"
            app:mc_radius="20dp"
            app:mc_strokeColor="#0f0"
            app:mc_strokeWidth="2dp" />

        <com.master.lib.view.ShapeFrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:onClick="onClick"
            app:mc_strokeColor="#0f0"
            app:mc_strokeWidth="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="测试测试"
                android:textColor="@color/white" />

        </com.master.lib.view.ShapeFrameLayout>

        <com.master.lib.view.MenuItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:mc_editable="false"
            app:mc_icon="@mipmap/ic_launcher"
            app:mc_iconGravity="top"
            app:mc_iconHeight="80dp"
            app:mc_iconWidth="80dp"
            app:mc_text="@string/app_name"
            app:mc_textBackground="@color/design_default_color_secondary" />

        <com.master.lib.view.EditableText
            android:id="@+id/editText"
            android:layout_width="200dp"
            android:onClick="editTextClick"
            android:layout_height="50dp"
            android:gravity="start|center_vertical"
            android:text="诉讼法"
            app:mc_editable="true" />
    </LinearLayout>
</ScrollView>